{% extends 'base.html.twig' %}
{% block main %}
    <div class="container" style="margin-left: 17%">
        <h1 class="col-lg-9 well">Alta de usuario Comercial</h1>
        <div class="col-lg-9 well">
            <div class="row">
                <form name="form" method="post" action="index.php?controller=User&method=userComercialAdd" enctype="multipart/form-data">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-4 form-group">
                                <label>Nombre</label>
                                <input type="text" class="form-control" placeholder="Nombre" name="nombre" id="nombre" required />
                            </div>
                            <div class="col-sm-4 form-group">
                                <label>Apellido</label>
                                <input type="text" class="form-control" placeholder="Apellido" name="apellido" id="apellido" required />
                            </div>
                            <div class="col-sm-4 form-group">
                                <label>Usuario</label>
                                <input type="text" name="usuario" placeholder="Usuario" id="usuario"  class="form-control" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4 form-group">
                                <label>Email</label>
                                <input type="email" placeholder="example@flyaway.com" id="email" name="email" class="form-control" required/>
                            </div>
                            <div class="col-sm-4 form-group">
                                <label>DNI</label>
                                <input type="number" placeholder="DNI" id="dni" name="dni" class="form-control" required/>
                            </div>
                            <div class="col-sm-4 form-group">
                                <label>Contrase&ntilde;a</label>
                                <input type="password" name="clave" placeholder="ContraseÃ±a" id="clave"  class="form-control" required>
                            </div>
                        </div>
                        <div align="center">
                            <button type="submit" class="btn btn-success navbar-btn">Confirmar</button>
                            <button type="reset" class="btn btn-default navbar-btn">Restablecer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}