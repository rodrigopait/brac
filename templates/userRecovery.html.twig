{% extends 'base.html.twig' %}
{% block main %}
    <div class="container" style="margin-top:10%">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>Desbloquear usuario</strong></h3>
                </div>

                <div class="panel-body">
                    <form role="form" method="post" action="index.php?controller=User&method=user_recovery_check" onsubmit="">
                            <input type="hidden" name="user_id" value="{{user.id}}" />
                            <input type="hidden" name="pregunta_id" value="{{user.id_pregunta}}" />
                        <div style="margin-bottom: 12px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" value="{{user.usuario}}" class="form-control" name="usuario" placeholder="Usuario" id="usuario" required="true">
                        </div>
                
                        <div style="margin-bottom: 12px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="text" value="{{user.pregunta}}" class="form-control" name="pregunta" placeholder="Pregunta Secreta" id="pregunta" required="true">
                        </div>

                        <div style="margin-bottom: 12px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="text" class="form-control" name="respuesta" placeholder="Respuesta Secreta" id="respuesta" required="true">
                        </div>
                        <div align="center">
                            <button type="submit" class="btn btn-brac">Desblqquear</button>
                        </div>
                        <br>
                        <hr style="margin-top:10px;margin-bottom:10px;" >
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
