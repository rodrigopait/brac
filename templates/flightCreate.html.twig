{% extends 'base.html.twig' %}
{% block main %}
<div class="container" style="margin: auto">
    <h1 class="col-lg-12 well">Alta de Vuelo</h1>
    <div class="col-lg-12 well">
        <div class="row">
            <form name="form" method="post" action="index.php?controller=Flight&method=flightsList" enctype="multipart/form-data">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <dl class="form-group">
                                <dt><label>Origen</label></dt>
                                <dd>
                                    <input name="ciudadOrigen" id="ciudadOrigen" type="text" placeholder="Ciudad" class="form-control">
                                </dd>
                                <dd style="margin-top: 3%">
                                    <input name="paisOrigen" id="paisOrigen" type="text" placeholder="Pais" class="form-control">
                                </dd>
                            </dl>
                        </div>
                        <div class="col-sm-6 form-group">
                            <dl class="form-group">
                                <dt><label>Destino</label></dt>
                                <dd>
                                    <input name="ciudadDestino" id="ciudadDestino" type="text" placeholder="Ciudad" class="form-control">
                                </dd>
                                <dd style="margin-top: 3%">
                                    <input name="paisDestino" id="paisDestino" type="text" placeholder="Pais" class="form-control">
                                </dd>
                            </dl>
                        </div>
                        <div class="col-sm-6 form-group">
                            <dl class="form-group">
                                <dt><label>Aerolinia</label></dt>
                                <dd>
                                    <select class="form-control" name="escalas">
                                        <option value="" disabled="disabled" selected="">Elija una aerolinea</option>
                                        {% for airline in airlines %}
                                            <option value={{airline.id}}>{{airline.nombre}}</option>
                                        {% endfor %}
                                    </select>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-sm-6 form-group">
                            <dl class="form-group">
                                <dt><label>Precio </label></dt>
                                <dd>
                                    <input name="precio" id="precio" type="price" placeholder="Precio" class="form-control"  min="0.00"  step="0.01"  onkeypress="return justNumbers(event);" required="true">
                                </dd>
                            </dl>
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Fecha de partida</label>
                            <input type="date" class="form-control" name="fechaPartida" required="true">
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Duracion</label>
                            <input type="number" class="form-control" min="0.0" step="0.1" name="duracion" placeholder="Duracion" required="true">
                        </div>
                        <div class="col-sm-4 form-group">
                            <label>Capacidad</label>
                            <input type="number" min="0" class="form-control" name="economica" placeholder="Economica" required="true">
                        </div>
                        <div class="col-sm-4 form-group" style="margin-top: 0.6vh;">
                            <label></label>
                            <input type="number" min="0" class="form-control" name="ejecutiva" placeholder="Ejecutiva" required="true">
                        </div>
                        <div class="col-sm-4 form-group" style="margin-top: 0.6vh;">
                            <label></label>
                            <input type="number" min="0" class="form-control" name="primera"  placeholder="Primera Clase" required="true">
                        </div>
                    </div>
                    <div align="center">
                        <button type="submit" class="btn btn-success navbar-btn">Agregar</button>
                        <button type="reset" class="btn btn-default navbar-btn">Restablecer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}