{% extends 'base.html.twig' %}
{% block main %}
    <div class="container" style="margin: auto">
        <h1 class="col-lg-12 well">Buscar Habitacion</h1>
        <div class="col-lg-12 well">
            <div class="row">
                <form name="form" method="post" action="index.php?controller=Room&method=roomsList" enctype="multipart/form-data">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Fecha desde</label>
                                <input type="date" class="form-control" name="fechaDesde" required="true">
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Fecha hasta</label>
                                <input type="date" class="form-control" name="fechaHasta" required="true">
                            </div> 
                        </div>                  
                        <div class="row">
                            <div class="col-sm-4 form-group">
                                <dl class="form-group">
                                    <dt><label>Localidad</label></dt>
                                    <dd >
                                        <select name="paisDestino" id="paisDestino" class="form-control" onchange="ciudades(this.id,'ciudadDestino');">
                                            <option disabled="disabled" selected="selected">Eleg√≠ un Pais</option>
                                            {% for country in countries %}
                                                <option value={{country.id}}="}">{{country.nombre}}</option>
                                            {% endfor %}
                                        </select>
                                    </dd>
                                    <dd style="margin-top: 3%">
                                        <select name="ciudadDestino" id="ciudadDestino" class="form-control" disabled="disabled"></select>
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-sm-4 form-group">
                                <dl class="form-group">
                                    <dt><label>Estrellas del hotel</label></dt>
                                    <dd>
                                        <select class="form-control" name="estrellas">
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>                                    
                                    </dd>                    
                                </dl>
                            </div>  
                            <div class="col-sm-4 form-group">
                                <label>Personas</label>
                                <input type="number" class="form-control" name="personas" placeholder="Personas" id="personas" min="1" onkeypress="return justNumbers(event);" required="true">
                            </div>
                        </div>                  
                        <div align="center">
                            <button type="submit" class="btn btn-primary navbar-btn">Buscar</button>
                            <button type="reset" class="btn btn-default navbar-btn">Restablecer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}