{% extends 'base.html.twig' %}
{% block main %}
<div class="container" style="margin: auto">
    <h1 class="col-lg-12 well">Buscar Vuelo</h1>
    <div class="col-lg-12 well">
        <div class="row">
            <form name="form" method="post" action="index.php?controller=Flight&method=flightsList" enctype="multipart/form-data">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label>Fecha de partida</label>
                            <input type="date" class="form-control" name="fechaPartida" required="true">
                        </div>
                        <div class="col-sm-6 form-group">
                            <label>Fecha de llegada</label>
                            <input type="date" class="form-control" name="fechaLlegada" required="false">
                        </div>
                        <div class="col-sm-6 form-group" style="margin-top: 1%">
                            <dl class="form-group">
                                <dt><label>Origen</label></dt>
                                <dd>
                                    <input name="ciudadOrigen" id="ciudadOrigen" type="text" placeholder="Ciudad" class="form-control">
                                </dd>
                                <dd style="margin-top: 3%">
                                    <input name="paisOrigen" id="paisOrigen" type="text" placeholder="Pais" class="form-control">
                                </dd>
                            </dl>
                        </div>
                        <div class="col-sm-6 form-group" style="margin-top: 1%">
                            <dl class="form-group">
                                <dt><label>Destino</label></dt>
                                <dd>
                                    <input name="ciudadDestino" id="ciudadDestino" type="text" placeholder="Ciudad" class="form-control">
                                </dd>
                                <dd style="margin-top: 3%">
                                    <input name="paisDestino" id="paisDestino" type="text" placeholder="Pais" class="form-control">
                                </dd>
                            </dl>
                        </div>
                        <div class="col-sm-6 form-group" style="margin-top: 1%">
                            <dl class="form-group">
                                <dt><label>Escalas</label></dt>
                                <dd>
                                    <select class="form-control" name="escalas">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                    </select>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-sm-6 form-group" style="margin-top: 1%">
                            <dl class="form-group">
                                <dt><label>Pasajeros </label></dt>
                                <dd>
                                    <input name="pasajeros" id="pasajeros" type="number" placeholder="Ingrese una cantidad" class="form-control"  min="1" value="1" onkeypress="return justNumbers(event);" required="true">
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <div align="center">
                        <button type="submit" class="btn btn-primary navbar-btn">Buscar</button>
                        <button type="reset" class="btn btn-default navbar-btn">Restablecer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}