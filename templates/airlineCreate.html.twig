{% extends 'base.html.twig' %}
{% block main %}
    <div class="container" style="margin: auto">
        <div id="alerta-msj" class="alert alert-success alert-dismissible" role="alert" hidden>
          <button id="boton-reset" type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>
          </button>
          <strong>Agregada!</strong> La aerolinea se dio de alta correctamente.
        </div>
        <h1 class="col-lg-12 well">Alta de Aerolinia</h1>
        <div class="col-lg-12 well">
            <div class="row">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-8 form-group">
                                <label>Nombre</label>
                                <input id="airline" type="text" class="form-control" name="nombre" placeholder="Ingrese un nombre">
                                 <span id="airline-error" class="text-danger"></span>
                            </div>
                        </div>           
                        <div align="left">
                            <button id="button-airline" class="btn btn-success navbar-btn">Agregar</button>
                            <button id="reset" type="reset" class="btn btn-default navbar-btn">Restablecer</button>
                        </div>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}