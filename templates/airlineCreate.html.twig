{% extends 'base.html.twig' %}
{% block main %}
    <div class="container" style="margin: auto">
        <h1 class="col-lg-12 well">Alta de Aerolinia</h1>
        <div class="col-lg-12 well">
            <div class="row">
                <form onsubmit="return(formAerolinea());" name="form" method="post"  enctype="multipart/form-data">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-8 form-group">
                                <label>Nombre</label>
                                <input id="airline" type="text" class="form-control" name="nombre" placeholder="Ingrese un nombre">
                                 <span id="airline-error" class="text-danger"></span>
                            </div>
                        </div>           
                        <div align="left">
                            <button type="submit" class="btn btn-success navbar-btn">Agregar</button>
                            <button id="reset" type="reset" class="btn btn-default navbar-btn">Restablecer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}