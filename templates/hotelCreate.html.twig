                                        <input name="pais" id="pais" type="text" placeholder="Pais" class="form-control" required="true">    
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-sm-6 form-group">
                                <dl class="form-group">
                                    <dt><label>Estrellas</label></dt>
                                    <dd>
                                        <select class="form-control" name="estrellas">
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                            <option value="5">5</option>
                                        </select>
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-sm-12 form-group">
                                <dl class="form-group">
                                    <dt><label>Servicios</label></dt>
                                    <dd>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" name="piscina" id="piscina" value="option1"> Piscina
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" name="balcon" id="balcon" value="option1"> Balcon
                                        </label>
                                    </dd>
                                    !!!!!!!seguir agregando!!!!!!!!!!!
                                </dl>
                            </div>
                        </div>           
                        <div align="center">
                            <button type="submit" class="btn btn-success navbar-btn">Agregar</button>
                            <button type="reset" class="btn btn-default navbar-btn">Restablecer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}