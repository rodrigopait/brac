{% extends 'base.html.twig' %}
{% block main %}
    <div class="container" style="margin-left: 22%">
        <h1 class="col-lg-9 well">Informacion de la cuenta </h1>
        <div class="col-lg-9 well">
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-4 form-group">
                            <label>Nombre</label>
                            <span class="form-control" id="nombre">{{ usuario.getNombre }}</span>
                        </div>
                        <div class="col-sm-4 form-group">
                            <label>Apellido</label>
                            <span class="form-control" id="apellido">{{ usuario.getApellido }}</span>
                        </div>
                        <div class="col-sm-4 form-group">
                            <label>Usuario</label>
                            <span id="usuario"  class="form-control">{{ usuario.getUsuario }}</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 form-group">
                            <label>Email</label>
                            <span id="email"  class="form-control">{{ usuario.getEmail }}</span>
                        </div>
                        <div class="col-sm-4 form-group">
                            <label>Contrase&ntilde;a</label>
                            <span id="clave" class="form-control">***********</span>
                        </div>
                        {% if rol == 'administrador' %}
                            <div class="col-sm-4 form-group">
                              <label>Dni</label>
                              <span id="dni"  class="form-control">{{ usuario.getDni }}</span>
                            </div>
                        {% elseif rol == 'cliente' %}
                        <div class="col-sm-4 form-group">
                            <label>Tarjeta de credito</label>
                            <span id="tarjeta"  class="form-control">{{ usuario.getNumeroTarjeta }}</span>
                        </div>
                    {% endif %}
                    </div>
                    <div align="center">
                        <a href="index.php?controller=User&method=userInformationModify"><button class="btn btn-warning navbar-btn">Modificar perfil</button></a>
                        <button class="btn btn-danger navbar-btn" id="eliminar">Eliminar cuenta</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
